@model ForgotPasswordViewModel

<br /><br /><br />
<div class="container">
    <div class="row mt-5">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="text-center h4 font-weight-bold card-title">
                        Forgot Password
                    </div>

                    <form method="post">
                        <div class="input-group text-danger" asp-validation-summary="All"></div>
                        <div class="input-group flex-nowrap mt-4">
                            <div class="input-group-text">
                                <i class="material-icons prefix">email</i>
                            </div>
                            <input placeholder="Enter Email" asp-for="Email" class="form-control" />
                        </div>
                        <div class="text-center mt-4">
                            <button class="black btn-dark btn btn-block darken-2 btn waves-effect waves-light center"
                                    type="submit" name="action">
                                Submit
                            </button>
                        </div>
                        <div class="mt-3">
                            <a asp-controller="account" asp-action="login">Back to Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
<br /><br /><br />