@model ResetPasswordViewModel

<br /><br />
<div class="container">
    <div class="row mt-5">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="text-center h4 font-weight-bold card-title">
                        Reset Password
                    </div>
                    <form method="post">
                        <div class="text-danger text-center">
                            <div class="font-weight-bold" asp-validation-summary="All">
                            </div>
                        </div>
                        <div class="input-group flex-nowrap mt-4">
                            <div class="input-group-text">
                                <i class="material-icons prefix">lock_outline</i>
                            </div>
                            <input required asp-for="Password" placeholder="Password" class="form-control">
                            <div asp-validation-for="Password" class="text-danger"></div>
                        </div>
                        <div class="input-group flex-nowrap mt-4">
                            <div class="input-group-text">
                                <i class="material-icons prefix">lock</i>
                            </div>
                            <input placeholder="Confirm Password" required asp-for="ConfirmPassword" class="form-control">
                            <div asp-validation-for="ConfirmPassword" class="text-danger"></div>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-block btn-dark">Reset</button>
                        </div>
                        <input hidden asp-for="email" />
                        <input hidden asp-for="token" />
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
<br /><br /><br />